{% extends 'layout/skeleton.twig' %}
{% block content %}
<table class="tblTitle">
	<tr>
		<td><span class="spanTitle">DOCUMENTOS</span></td>
	</tr>
</table>
<table style="width:99%;">
	<tr>
		<td style="border:1px solid transparent;width:40%;">
			<form id="empresaDocumentoFrm" onsubmit="return false;" style="margin-right:0.5rem;width:50%;">
				<table class="tblForm">
					
					<tr>
						<td class="title">TIPO DOCUMENTO</td>
						<td>{{ empresaSelDocumentoTipoDocumento | raw }}</td>
					</tr>
					<tr>
						<td class="title">SELECIONAR ARQUIVO</td>
						<td colspan="2">
							<input type="file" name="documento" required>
							<!--<button class="app-btn b" onclick="salvarDocumentoEmpresaSystem();" title="upload documento"><span class="glyphicon glyphicon-upload"></span>&nbsp;ESCOLHER ARQUIVO</button>-->
						</td>
						
					</tr>
					<tr>
						<td class="title">OBSERVAÇÃO</td><td colspan="3">
							<textarea id="empresaDocumentoTxtObservacao" cols="50" rows="8" maxlength="8000" style="margin:0.5rem 0.2rem 0 0 ;">{{ obj.observacao }}</textarea>
						</td>
						<tr>
							<td colspan="2"><button class="app-btn b" onclick="salvarDocumentoEmpresaSystem({{ idEmpresa }});" title="novo documento"><span class="glyphicon glyphicon-ok"></span>&nbsp;SALVAR</button></td>
						</tr>
					</tr>
				</table>
			</form>
		</td>
		{% if documentos|length > 0 %}
		<td style="border:1px solid transparent;width:50%;">
			<table>
				{% for obj in documentos %}
				<tr>
					<td>{{ obj.nome_documento }}</td>
				</tr>
				{% endfor %}
			</table>
		</td>
		{% endif %}
	</tr>
</table>
{% endblock %}
{% block script %}
<script>
</script>
{% endblock %}